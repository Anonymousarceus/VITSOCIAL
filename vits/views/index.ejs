    font-size: 1rem;  
}
.left .sidebar .active{
    background-color: rgb(243, 241, 241);;
}
.left .sidebar .active i,
.left .sidebar .active h3 {
    color: rgb(114, 114, 240);
} 
.left .sidebar .active::before{
    content: "";
    display: block;
    width: 0.5rem;
    height: 100%;
    position: absolute;
    background: rgb(114, 114, 240);
}
.left .sidebar .menu-item:first-child.active{
