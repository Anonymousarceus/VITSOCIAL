}
.left .sidebar i{
    font-size: 1.4rem;
    color: gray;
    margin-left: 2rem;
    
    position: relative;
}
.left .sidebar .notification-count {
    background-color: red;
    color: white;
    font-size: 0.7rem;
    width: fit-content;
    border-radius: 0.8rem;
    padding: 0.1rem 0.4rem;
    position: absolute;
    top: 0.8rem;
    /* right: -0.3rem; */
    left: 2.8rem;

